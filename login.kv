
<Login>:
    name: "login"
    btn: btn


    password: password

    FloatLayout:

        Label:
            text:"password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.32, "top":0.65}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            focus: True
            select: True
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            password: True
            pos_hint: {"x": 0.3 , "top":0.5}
            size_hint: 0.4, 0.15
            on_text_validate:
                app.root.current = "main"
                app.root.current = "main" if password.text == "Sash13920" else "login"
                root.manager.transition.direction = "left"
                root.submit()
        Button:
            id: btn
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Submit"
            on_release:
                app.root.current = "main"
                app.root.current = "main" if password.text == "1234" else "login"
                root.manager.transition.direction = "left"
                root.submit()



<MainWindow>:
    name: "main"

    Button:
        pos_hint:{"x":0.25,"y":0.05}
        size_hint: 0.5, 0.1
        text: "Go Back"
        on_release:
            app.root.current = "login"
            root.manager.transition.direction = "right"
